@using ShoppingListProject.Models;
@model UserRegisterViewModel

<link rel="stylesheet" href="/css/site.css">

<div class="form-body">
    <div class="row">
        <div class="form-holder">
            <div class="form-content">
                <img src="/images/login.jpg" />
                <div class="form-items">
                    <h3>Hemen üye olun</h3>
                    <p>Alışveriş listelerinizi hazırlayın</p>
                    <form method="POST" background-color: #152733; class="register-form" id="register-form">
                        @Html.ValidationMessage("emailused",new { @class = "text-danger" })
                      
                        <div class="col-md-12">
                            <label for="UserSurname"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                <input type="text" asp-for="UserName" placeholder="Adınız" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="col-md-12">
                         <label for="UserSurname"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                <input type="text" asp-for="UserSurname" placeholder="Soyadınız" />
                                <span asp-validation-for="UserSurname" class="text-danger"></span>
                               </div>

                        <div class="col-md-12">
                             <label for="UserMail"><i class="zmdi zmdi-email"></i></label>
                                <input type="email" asp-for="UserMail" placeholder="Email" />
                                <span asp-validation-for="UserMail" class="text-danger"></span>
                            </div>

                       


                        <div class="col-md-12">
                            <label for="pass"><i class="zmdi zmdi-lock"></i></label>
                            <input type="password" asp-for="UserPassword" placeholder="Parola" />
                            <span asp-validation-for="UserPassword" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-12">
                           <label for="re-pass"><i class="zmdi zmdi-lock-outline"></i></label>
                                <input type="password" asp-for="ConfirmPassword" placeholder="Parola Tekrar" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                              </div>


                      

                  


                        <div class="form-button mt-3">
                            <button id="submit" type="submit" class="btn btn-primary">Üye Ol</button>
                        </div>
                        <a href="/Login/SignIn" class="signup-image-link">Zaten bir üyeliğiniz var mı?</a>
                    </form>
                     
                </div>
            </div>
        </div>
    </div>
           </div>
<script src="/js/main.js"></script>